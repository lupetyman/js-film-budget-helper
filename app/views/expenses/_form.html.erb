<%= form_for ([current_user, expense]) do |f| %>
  <%= f.label :vendor %>
  <%= f.text_field :vendor %><br></br>

  <%= f.label :department_id %>
  <%= f.collection_select :department_id, Department.all, :id, :category, {:include_blank => 'Please Select'} %><br></br>

  <%= f.label :date %>
  <%= f.date_field :date %><br></br>

  <%= f.label :total %>
  <%= f.number_field :total, min: 0.01, max: 999999.99, step: 0.01 %><br></br>

  <%= f.label :production_id %>
  <%= f.collection_select :production_id, Production.all, :id, :name, {:include_blank => 'Please Select'} %><br></br>

  <%= f.label :receipt %>
  <%= f.file_field :receipt %><br></br>

  <%= f.label :description, "Description - Optional" %>
  <%= f.text_field :description %><br></br>

  <%= f.submit %>
<% end %>
