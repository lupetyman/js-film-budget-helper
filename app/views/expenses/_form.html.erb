<%= form_for ([current_user, expense]), html: {:id => "new-expense-form"} do |f| %>
  <%= f.label :vendor %>
  <%= f.text_field :vendor %><br></br>

  <%= f.label :date %>
  <%= f.date_field :date %><br></br>

  <%= f.label :total %>
  <%= f.number_field :total, min: 0.01, max: 999999.99, step: 0.01 %><br></br>

  <%= f.label :production_id %>
  <% if @production %>
      <%= f.text_field :production_id, value: @production.name, readonly: true %>
      <%= f.hidden_field :production_id, value: @production.id, readonly: true %>
  <% else %>
    <%= f.collection_select :production_id, Production.all, :id, :name, {:include_blank => 'Please Select'} %>
  <% end %>
  <br></br>

  <%= f.label :description, "Description - Optional" %>
  <%= f.text_field :description %><br></br>

  <%= f.submit class: 'submit' %>
<% end %>
