<!DOCTYPE html>
<html>
  <head>
    <title>FilmBudgetHelper</title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div class="container" role="main">
      <br>
      <% if flash.any? %>
          <% flash.each do |key, value| %>
            <div class="alert alert-info alert-<%= key %>"><%= value %></div>
          <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
